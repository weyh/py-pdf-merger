{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pkg",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "-p"
            ]
        },
        {
            "label": "build cli",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "-b",
                "--cli"
            ]
        },
        {
            "label": "build ui",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "-b",
                "--ui"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "-c"
            ]
        }
    ]
}
